package cf;
import java.util.*;
import java.math.*;

public class MainA {
		static int INF = 0x3f3f3f3f;
		static int N = 1010 , M = 2*N;
		static int[] cnt = new int[N];
		static int n,m;

		public static void main(String[] sss) {
			Scanner sc = new Scanner(System.in);
			m = sc.nextInt();
			while(m-->0) {
				Arrays.fill(cnt, 0);
				n = sc.nextInt();
				for(int i=1;i<=n;i++) {
					cnt[i] = cnt[i-1]+sc.nextInt()==2?1:0;
				}
				int flag = 0;
				for(int i=1;i<=n-1;i++) {
					if(cnt[i] == cnt[n] - cnt[i]) {
						System.out.println(i);
						flag = 1;
						break;
					}	
				}
				if(flag==0) System.out.println(-1);	
			}
		}
}
