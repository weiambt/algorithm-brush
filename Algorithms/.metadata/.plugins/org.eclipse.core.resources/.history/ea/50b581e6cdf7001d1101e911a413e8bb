package ÀýÌâ;

import java.util.*;
import java.math.*;
import java.awt.Color;
import java.io.*;

public class boyilun {
		static int INF = 1000000007;
		static int N = 101000 , M = 2*N;
		static int[] sg = new int[N];
		static PII[] arr = new PII[N];
		static int n,m,idx;
		
		public static void main(String[] sss) {
			Scanner sc = new Scanner(System.in);
			n = sc.nextInt();
			for(int i=1;i<=n;i++) {
				int a = sc.nextInt();
				int b = sc.nextInt();
				arr[idx++] = new PII(a,b);
			}
			Arrays.sort(arr,1,n+1,(a,b)->(a.l-b.l));
			PriorityQueue<Integer> q = new PriorityQueue<Integer>((a,b)->(a-b));
			for(int i=1;i<=n;i++) {
				PII now = arr[i];
				if(q.size()==0 || q.peek()>now.l) {
					q.add(now.r);
				}else {
					q.poll();
					q.add(now.r);
				}
			}
		}
		
}
class PII{
	int l,r;
	public PII(int l,int r) {
		// TODO Auto-generated constructor stub
		this.l = l;
		this.r = r;
	}
}
