		TreeSet<Integer> tmp = new TreeSet<Integer>();
		for(int i=n;i>0;i--) {
			tmp.add(arr[i]);
			last[i] = new TreeSet<Integer>();
			
		}
		
		for(int i=1;i<=n;i++) {
			if(arr[i]%k==0) {
				ans += mp.get(arr[i]/k) * cnt;
			}
